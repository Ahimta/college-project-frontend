div(ng-show='applicant')
  div.row(style='margin-bottom: 15px' dir='ltr')
    ul.nav.nav-tabs.nav-justified
      li(ng-class='{active: isEditing}' ng-click='isEditing = true')
        a(href='javascript:void(0)') تعديل
      li(ng-class='{active: !isEditing}' ng-click='isEditing = false')
        a(href='javascript:void(0)') عرض

  div.row
    article(ng-hide='isEditing')
      div.panel.panel-primary
        header.panel-heading
          h3.panel-title {{ applicant.full_name }}

        div.panel-body
          p
            span.glyphicon.glyphicon-home
            | &nbsp;
            span(ng-bind='applicant.address')

          p
            span.glyphicon.glyphicon-earphone
            | &nbsp;
            span(ng-bind='applicant.phone')

          hr

          p
            span.glyphicon.glyphicon-book
            | &nbsp;
            span(ng-bind='applicant.specialization')
          p
            span.glyphicon.glyphicon-bookmark
            | &nbsp;
            span(ng-bind='applicant.degree')

        footer.panel-footer
          div
            span
              button.btn.btn-sm.btn-success(type='button'
                ng-click='accept(applicant.id)' ng-show="applicant.accepted != 'accepted'") قبول
              button.btn.btn-sm.btn-success(type='button' disabled
                ng-show="applicant.accepted == 'accepted'") تم القبول

            | &nbsp;

            span
              button.btn.btn-sm.btn-danger(type='button'
                ng-click='reject(applicant.id)' ng-show="applicant.accepted != 'rejected'") رفض
              button.btn.btn-sm.btn-danger(type='button' disabled
                ng-show="applicant.accepted == 'rejected'") تم الرفض

            span.pull-left
              button.btn.btn-sm.btn-primary(type='button' ng-click='isEditing = true') تعديل
              | &nbsp;
              button.btn.btn-sm.btn-danger(type='button' ng-click='destroy(applicant.id)') حذف

    div(ng-show='isEditing')
      include form
