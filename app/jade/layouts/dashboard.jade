header
  include ../views/_navbar

div.container-fluid
  div.row
    div.col-sm-3.col-md-2.sidebar(ng-controller='SidebarCtrl'
      ng-class="{'col-md-push-10': isArabic(), 'col-sm-push-9': isArabic()}")
      ul.nav.nav-sidebar
        li(ng-repeat='link in links' ng-class='{active: isActive(link.path)}')
          a(ng-href='{{ link.path }}' translate='{{ link.title }}')


    div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(
      ng-class="{'col-md-pull-2': isArabic(), 'col-sm-pull-3': isArabic()}")
      h1.page-header(translate='DASHBOARD')
      block content
