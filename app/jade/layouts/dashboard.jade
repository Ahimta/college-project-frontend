header
  include ../views/_navbar

div.container
  div.row
    h1.page-header.text-center لوحة التحكم

  div.row
    div.col-sm-9.col-md-10
      block content

    div.col-sm-3.col-md-2(ng-controller='SidebarCtrl')
      ul.nav.nav-pills.nav-stacked
        li(ng-repeat='link in links'
          ng-class='{active: isActive(link.path), disabled: !link.done}')
          a(ng-href='{{ link.path }}' ng-bind='link.title')
