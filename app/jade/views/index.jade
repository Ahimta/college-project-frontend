header
  include _navbar
  include _logo

hr

div.container
  div.row
    div.col-md-4

    div.col-md-4
      article.text-center(ng-repeat='gate in links')
        header: h2(ng-bind='gate.name')
        p(ng-bind='gate.description')
        hr

    div.col-md-4
      div.panel.panel-default
        header.panel-heading الأقسام

        div.list-group
          a.list-group-item(ng-repeat='gate in links' ng-href='{{gate.path}}'
            ng-class='{active: isActive(gate.path)}'
            ng-bind='gate.name')

hr

include _footer
