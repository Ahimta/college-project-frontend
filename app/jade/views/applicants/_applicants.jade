div.row(ng-show='applicants')
  div.table-responsive
    table.table.table-striped.text-center
      thead
        tr
          th.text-center الاسم
          th.text-center العنوان
          th.text-center التخصص
      tbody
        tr(ng-repeat='applicant in applicants'
            ng-class='getClass(applicant.accepted)')
          td: a(ng-href='#/applicants/{{applicant.id}}')
            {{ applicant.first_name }} {{ applicant.last_name }}
          td(ng-bind='applicant.address')
          td(ng-bind='applicant.specialization')

  article(ng-repeat='applicant in applicants')
    div.panel.panel-primary
      header.panel-heading
        button.pull-left.close(type='button' ng-click='destroy(applicant.id)').
          &times;
        h3.panel-title {{ applicant.first_name }} {{ applicant.last_name }}

      div.panel-body
        p
          span.glyphicon.glyphicon-home
          | &nbsp;
          span {{ applicant.address }}

        p
          span.glyphicon.glyphicon-earphone
          | &nbsp;
          span(ng-bind='applicant.phone')

        hr

        p
          span.glyphicon.glyphicon-book
          | &nbsp;
          span(ng-bind='applicant.specialization')
        p
          span.glyphicon.glyphicon-bookmark
          | &nbsp;
          span(ng-bind='applicant.degree')

      footer.panel-footer
        div
          button.btn.btn-success(type='button'
            ng-click='accept(applicant.id)' ng-show="applicant.accepted != 'accepted'") قبول
          button.btn.btn-success(type='button' disabled
            ng-show="applicant.accepted == 'accepted'") تم القبول

          | &nbsp;

          button.btn.btn-danger(type='button'
            ng-click='reject(applicant.id)' ng-show="applicant.accepted != 'rejected'") رفض
          button.btn.btn-danger(type='button' disabled
            ng-show="applicant.accepted == 'rejected'") تم الرفض
