header
  include _navbar

div.page-header
  h1
    block title

div.container
  form(name='myForm' role='form' ng-submit='login()')
    div.form-group
      label(for='username') اسم المستخدم
      input#username.control-group(type='text', placehoder='اسم المستخدم'
        required autofocus ng-model='user.username')

    div.form-group
      label(for='password') كلمة المرور
      input#password.control-group(type='password', placehoder='كلمة المرور'
        required ng-model='user.password')

    div.form-group
      input.control-group.btn.btn-sucess.btn-lg.btn-block(type='submit'
        value='تسجيل دخول' ng-disabled='myForm.$pristine')
